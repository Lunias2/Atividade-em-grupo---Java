package jogo;

import java.util.ArrayList;

public class Celula {
	
	private ArrayList<Peao> peoes;
	private int posicao;
	
	
	public Celula() {
		peoes = new ArrayList<>();
	}
	
	public Celula(int posicao) {
		this.posicao = posicao;
		peoes = new ArrayList<>();
	}
	
	
	public boolean addPeao(Peao peao) {
		if(peoes.size() == 0) {
			peoes.add(peao);
			return true;
		} else if (peoes.get(0).getCor().equals(peao.getCor())) {
			peoes.add(peao);
			return true;
		} else {
			return false;
		}
	}

}
