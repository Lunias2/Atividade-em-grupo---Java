package jogo;

public class Jogar {

	public static void main(String[] args) {
		Jogo jogo = new Jogo();
		jogo.iniciarJogo();
		int cont = 0;
		while(!jogo.fimDeJogo()) {
			if(cont == 8)
				cont = 0;
			jogo.mostrarTabuleiro();
			System.out.println();
			jogo.verificaMovimentarPeca(cont);
			System.out.println();
			jogo.mostrarTabuleiro();
			
			
			cont++;
		}
		
		
		
		
	}

}
