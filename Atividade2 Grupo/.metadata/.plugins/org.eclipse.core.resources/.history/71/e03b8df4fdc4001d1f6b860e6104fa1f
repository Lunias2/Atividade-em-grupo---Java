package jogo;

public class Jogar {

	public static void main(String[] args) {
		Jogo jogo = new Jogo();
		jogo.iniciarJogo();
		int cont = 0;
		jogo.mostrarTabuleiro();
		while(!jogo.fimDeJogo()) {
			if(cont == 8)
				cont = 0;
			jogo.verificaMovimentarPeca(cont);
			System.out.println();
			jogo.mostrarTabuleiro();
			
			verificaTabuleiro
			cont++;
		}
		
		System.out.println("!!!!Parabens vencedor do jogo: [" + jogo.getVencedor() + "]!!!!");
	}

}
