package jogo;

import java.util.ArrayList;

public class Celula {
	
	private ArrayList<Peao> peoes;
	private int posicao;
	
	
	public Celula() {
		peoes = new ArrayList<>();
	}
	
	public Celula(int posicao) {
		this.posicao = posicao;
		peoes = new ArrayList<>();
	}
	
	
	public boolean verificaPeao(Peao peao) {
		if(peoes.isEmpty() || (peoes.get(0).getCor().equals(peao.getCor()))) {
			addPeao(peao);
			return true;
		} else {
			return false;
		}
	}
	
	public void addPeao(Peao peao) {
		peoes.add(peao);
	}
	
	public boolean removePeao

	/**
	 * @return the peoes
	 */
	public ArrayList<Peao> getPeoes() {
		return peoes;
	}

	/**
	 * @return the posicao
	 */
	public int getPosicao() {
		return posicao;
	}

	/**
	 * @param peoes the peoes to set
	 */
	public void setPeoes(ArrayList<Peao> peoes) {
		this.peoes = peoes;
	}

	/**
	 * @param posicao the posicao to set
	 */
	public void setPosicao(int posicao) {
		this.posicao = posicao;
	}
	

}
